<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FEEFDD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopOwner.AddMechanic">

    <TextView
        android:id="@+id/textView62"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Add a Mechanic"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/addMechanicLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.829" />

    <LinearLayout
        android:id="@+id/back_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:clickable="true"
        android:focusable="false"
        android:layout_marginBottom="650dp"
        android:background="@drawable/back_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/chevron"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/addMechanicLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/add_input_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView63"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="textStart"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/roboto"
            android:text="First Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MFname"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView63"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MFname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="200dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto"
            android:text="Last Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MFname"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="textStart"
            android:layout_toEndOf="@+id/textView64"
            android:fontFamily="@font/roboto"
            android:text="M.I."
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MLname"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView64"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/MMname"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView65"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/MLname"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MLname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="220dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto"
            android:text="Specialty"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Mspecialty"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView66"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Mspecialty"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="120dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto"
            android:text="Mechanic`s Email"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Memail"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView67"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Memail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto"
            android:text="Mechanic`s Password"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Mpassword"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView68"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/textfieldbg"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_below="@+id/Mpassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#BEA7E5"
            android:fontFamily="@font/roboto_bold"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:strokeColor="#35524A"
            app:strokeWidth="3dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>